<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/userinputid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_file"
        android:hint="@string/username"
        android:padding="15dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        tools:layout_editor_absoluteY="26dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnusersearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinputid"
        android:background="@drawable/btn_file"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/usercard"
        android:layout_width="380dp"
        android:layout_height="530dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/userinputid">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileimg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:padding="1dp"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginStart="180dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/repos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/repo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:textColor="@color/black"
            android:layout_marginTop="265dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/repo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="70dp"
            android:textColor="@color/black"
            android:layout_marginTop="285dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/follower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_marginStart="180dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/black"
            android:layout_marginStart="180dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/sharebtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:layout_marginStart="30dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_file">
        </Button>

        <Button
            android:id="@+id/showprofile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:layout_marginStart="200dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_file"
            >

        </Button>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>